<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/home_btn_bg"
        android:textColor="@color/colorGray" >

        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:text="  &lt; 返回"
            android:textColor="@color/colorGray"
            android:textSize="20sp" />

        <TextView android:textColor="@color/colorGray" android:layout_marginLeft="50dip" android:text="随访联系人" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="24sp" />
    </LinearLayout>
<ScrollView 
		 android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbars="vertical"
		>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:id="@+id/p_currentordercontainer" 
    >

    <LinearLayout   android:layout_gravity="center" android:paddingRight="30.0dip"  android:paddingLeft="30.0dip" android:layout_width="fill_parent" android:layout_height="30.0dip">
        <TextView android:textStyle="bold" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="姓名" />
        <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:width="0.0dip" android:layout_weight="1.0" />
        <TextView android:id="@+id/p_ordertimetext" android:textStyle="bold" android:gravity="center"  android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="" />
    </LinearLayout>
    <LinearLayout  android:layout_gravity="center" android:paddingRight="30.0dip"  android:paddingLeft="30.0dip" android:layout_width="fill_parent" android:layout_height="30.0dip">
        <TextView android:textStyle="bold" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="电话" />
        <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:width="0.0dip" android:layout_weight="1.0" />

        <TextView
            android:id="@+id/telnumber"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#0000ff"
            android:textStyle="bold" />

    </LinearLayout>

        
    

</LinearLayout>
</ScrollView>
    </LinearLayout>