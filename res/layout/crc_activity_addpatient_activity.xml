<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/home_btn_bg"
        android:textColor="@color/colorGray" >

        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:text="  &lt; 返回"
            android:textColor="@color/colorGray"
            android:textSize="20sp" />

        <TextView android:textColor="@color/colorGray" android:layout_marginLeft="50dip" android:text="添加受试者" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="24sp" />
    </LinearLayout>
<ScrollView
   
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >

        <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical" >
		<LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="horizontal">

			<TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="用户名：" />
"
            <EditText
                android:id="@+id/p_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true" />
		</LinearLayout>
        <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="horizontal">

			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="密    码：" />

            <EditText
                android:id="@+id/p_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />
		</LinearLayout>
		<LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="horizontal">

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="姓    名：" />

            <EditText
                android:id="@+id/p_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true" />
		</LinearLayout>
		<!-- <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="horizontal">

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="身份证：" />

            <EditText
                android:id="@+id/p_cardid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true" />
		</LinearLayout> -->
		<LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="horizontal">

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="项    目：" />

           
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

		</LinearLayout>
		<LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="horizontal">

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="医    院：" />

           
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

		</LinearLayout>
		<LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="horizontal">

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="医    生：" />

           
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

		</LinearLayout>
            <!-- <Button
                android:id="@+id/cancelchangepwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="清空" /> -->
            <Button
                android:id="@+id/confirmchangepwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="添加" />
        </LinearLayout>
    </ScrollView>
 </LinearLayout>
